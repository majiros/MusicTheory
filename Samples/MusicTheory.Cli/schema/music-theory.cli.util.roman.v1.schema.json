{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:music-theory:cli:schema:util:roman:v1",
  "$comment": "MusicTheory CLI utility schema: --romanJson (stable URN)",
  "title": "Roman Utility Output (v1)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "input": { "type": "string" },
      "pcs": {
        "type": "array",
        "items": { "type": "integer", "minimum": 0, "maximum": 11 }
      },
      "bassPcHint": { "type": "integer", "minimum": 0, "maximum": 11 }
    },
    "required": ["input", "pcs"]
  }
}
